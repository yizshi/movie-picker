rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to movies collection
    match /movies/{movieId} {
      allow read: if true;
      allow write: if false; // Only server-side can write movies
    }
    
    // Allow read access to meetings collection
    match /meetings/{meetingId} {
      allow read: if true;
      allow write: if false; // Only server-side can write meetings
    }
    
    // Allow read/write access to ballots collection
    match /ballots/{ballotId} {
      allow read: if true;
      allow create: if true; // Users can create ballots
      allow update, delete: if false; // Only server-side can modify/delete
    }
    
    // Allow read/write access to reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if true; // Users can create reviews
      allow update, delete: if false; // Only server-side can modify/delete
    }
  }
}
